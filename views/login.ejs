<link rel="stylesheet" type="text/css" href="/styles/style.css" />
<link rel="stylesheet" type="text/css" href="/styles/font-awesome.css" />

<div class="col-md-offset-1 col-lg-offset-2 col-md-10 col-lg-8">
	<div class="codrops-top">
	    <button id="home" class="top-bar"><a href="/">Home</a></button>
	    <button id="search" class="top-bar"><a href="/house/search">Search</a></button>
	</div>
</div>
	
<div class="col-md-offset-3 col-lg-offset-4 col-md-6 col-lg-4">
	<div class="login">
		<img src="/images/house.jpg" />
		<form action="" method="post">
			<div class="form-input">
				<input type="text" id="userName" name="username" placeholder="Account" required focus /><br>
			</div>
			<div class="form-input">
				<input type="password" id="userPassword" name="password" placeholder="Password" required /><br>
			</div>
			<input type="submit" id="login" class="btn-login" value="Login" onclick="compare()"/>
			<p>Do not have an account? <a href="/user/register">Register </a>here</p>
		</form>
	</div>
</div>

<script type="text/javascript">
	function compare() {
		var data = new FormData();
        data.append("username", document.getElementById("userName").value); 
        data.append("password", document.getElementById("userPassword").value);
        var xhr = new XMLHttpRequest();
        xhr.open("post", "/user/login", true);
        xhr.onload = function(e) {
           	alert(this.responseText);
           	location.reload();
        };
        xhr.send(data);
	}
</script>

